<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="my_record_02" model="hubspot.import.integration">
            <field name="field_name">Hubspot</field>
        </record>
    </data>
    <data>
        <record model="ir.ui.view" id="hubspot_import_form_view">
            <field name="name">HubspotImportIntegration.form</field>
            <field name="model">hubspot.import.integration</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <group>
                            <div>
                                <h1 class="text-primary">Hubspot Connector</h1>
                                <hr/>
                            </div>
                        </group>
                        <group>
                            <div>
                                <group col="4">
                                    <group>
                                        <strong>Companies</strong>
                                    </group>
                                    <group>
                                        <field name="import_company" nolabel="1"/>
                                    </group>
                                    <group>
                                        <field name="export_company" nolabel="1"/>
                                    </group>
                                </group>
                                
                                <group col="4">
                                    <group>
                                        <strong>Contacts</strong>
                                    </group>
                                    <group>
                                        <field name="import_contact" nolabel="1"/>
                                    </group>
                                    <group>
                                        <field name="export_contact" nolabel="1"/>
                                    </group>
                                </group>

                                <group col="4">
                                    <group>
                                        <strong>Deals</strong>
                                    </group>
                                    <group>
                                        <field name="import_deal" nolabel="1"/>
                                    </group>
                                    <group>
                                        <field name="export_deal" nolabel="1"/>
                                    </group>
                                </group>
                                <group col="4">
                                    <group>
                                        <strong>Tickets</strong>
                                    </group>
                                    <group>
                                        <field name="import_ticket" nolabel="1"/>
                                    </group>
                                </group>
                            </div>
                        </group> 
                        <group col="10">
                            <field name="auto_sync" string="Auto Scheduler"/>
                            <field name="interval_number" on_change="check_number"
                                   attrs="{'invisible':[('auto_sync','=',False)]}" class="oe_inline"
                                   string="Execute Every"/>
                            <field name="interval_unit"
                                   attrs="{'invisible':[('auto_sync','=',False)], 'required':[('interval_unit','!=','')]}"
                                   string="Interval Unit"/>
                        </group>

                        <group col="10">

                            <field name="custom_date_range" string="Custom Sync Date Range"/>
                            <field name="start" string="Start Date"
                                   attrs="{'invisible':[('custom_date_range','=',False)],'required':[('custom_date_range','!=',False)]}"/>
                            <field name="end" string="End Date"
                                   attrs="{'invisible':[('custom_date_range','=',False)],'required':[('custom_date_range','!=',False)]}"/>
                        </group>
                        <span class="text-success">This may take some time to import data..</span>

                        <group style="text-align:center;">
                            <button name="sync" string="Sync Data" type="object" icon="fa-refresh"/>
                        </group>

                        <notebook colspan="3">
                            <page string="Import History" autofocus="autofocus">
                                <group>
                                    <field name="history_line" mode="tree">
                                        <tree string="Connector History" class="my_class" create="false" delete="true" limit="15">
                                            <field name="sync_date" width="100"/>
                                            <field name="no_of_companies" width="130"/>
                                            <field name="no_of_contacts" width="100"/>
                                            <field name="no_of_deals" width="100"/>
                                            <field name="no_of_tickets" width="130"/>
                                            <field name="sync_nature" width="100"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hubspot_action">
            <field name="name">hubspot_import_integration</field>
            <field name="res_model">hubspot.import.integration</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="odoo_hubspot.my_record_02"/>
            <field name="target">inline</field>
        </record> 

        <record model="ir.ui.view" id=">res_config_settings_view_form">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Hubspot Settings" string="Hubspot Settings"
                         data-key="odoo_hubspot">
                        <div id="companies">
                            <h2>Hubspot Connector</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Hubspot API Key</span>
                                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will enter credentials and test them.
                                        </div>
                                        <div class="content-group">
                                            <div class="row mt16">
                                                <label for="external_report_layout_id" string="API Key" class="col-lg-4 o_light_label"/>
                                                <field name="hubspot_key" password="1"/>
                                            </div>
                                            <div class="row mt8 ml0">
                                                <button name="hubspot_api_key" string="Test Connection" icon="fa-plug" type="object" class="oe_highlight" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="companies">
                            <h2>Hubspot Instant Sync</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="company"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label string="Company" for="company"/>
                                        <div class="text-muted">
                                            Create or Delete Company in Hubspot If Created or Deleted in Odoo.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="contact"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label string="Contact" for="contact"/>
                                        <div class="text-muted">
                                            Create or Delete Contact in Hubspot If Created or Deleted in Odoo.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="deal"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label string="Deal" for="deal"/>
                                        <div class="text-muted">
                                            Create or Delete Deal into Hubspot If Created or Deleted in Odoo.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <menuitem id="hubspot_root" name="Hubspot" web_icon="odoo_hubspot,static/description/icon.png"/>
    
        <menuitem id="hubspot_import_integration" name="Hubspot Menu" parent="hubspot_root" action="hubspot_action" sequence="2"/>
    </data>
</odoo>